// Program to count the number of digits in an int

// int -- int
fn digits in
  1 swap while 10 / dup 0 > do
    let count remaining in
      count 1 +
      remaining
    end
  end drop
end

// int --
fn show_digits in
  "Number of digits: " puts
  digits print
end

// --
fn main in
  8    show_digits 
  13   show_digits 
  1234 show_digits
  67   show_digits
  999  show_digits
end
